{
  "expo": {
    "name": "Zeger Rider",
    "slug": "zeger-rider",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "zeger-rider",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#DC2626"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.zeger.rider",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Aplikasi membutuhkan akses lokasi untuk tracking posisi rider saat beroperasi.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Aplikasi membutuhkan akses lokasi untuk tracking posisi rider saat beroperasi.",
        "NSLocationAlwaysUsageDescription": "Aplikasi membutuhkan akses lokasi untuk tracking posisi rider saat beroperasi.",
        "NSCameraUsageDescription": "Aplikasi membutuhkan akses kamera untuk foto verifikasi stok.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification",
          "location",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#DC2626"
      },
      "package": "com.zeger.rider",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.CAMERA",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.CAMERA",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png",
      "name": "Zeger Rider",
      "shortName": "Zeger Rider",
      "lang": "id",
      "scope": "/",
      "themeColor": "#DC2626",
      "backgroundColor": "#DC2626",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "preferRelatedApplications": false,
      "dangerouslyAllowInsecureHttpInExpoGo": false
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Aplikasi membutuhkan akses lokasi untuk tracking posisi rider saat beroperasi.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#DC2626"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Aplikasi membutuhkan akses kamera untuk foto verifikasi stok."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Aplikasi membutuhkan akses galeri untuk upload foto."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "3f638d68-0912-4149-928a-02fe56a166b9"
      }
    },
    "owner": "koncomyid",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/3f638d68-0912-4149-928a-02fe56a166b9"
    }
  }
}
